# Google OAuth Credentials
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# NextAuth Configuration
# Generate secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3001

# Admin Password for LLM Access
# This is used to gate access to AI features
ADMIN_PASSWORD=your_secure_admin_password_here

# Google AI API Key
# Get this from Google AI Studio: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Brave Search API Key (optional, for web search features)
BRAVE_API_KEY=your_brave_api_key_here

# Firecrawl API Key (optional, for advanced web scraping)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

